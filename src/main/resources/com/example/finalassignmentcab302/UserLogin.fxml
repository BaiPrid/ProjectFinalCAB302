<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>



<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.finalassignmentcab302.Controllers.UserLoginController">

    <HBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER_RIGHT" spacing="50.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <!-- Placeholder for future image -->
        <Region fx:id="imagePlaceholder" prefWidth="200" />

        <VBox alignment="CENTER" spacing="10.0">


            <!-- Members Login Box -->
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Members Login"/>
                <Label text="Username"/>
                <TextField fx:id="memberUsername"/>
                <Label text="Password"/>
                <PasswordField fx:id="memberPassword"/>
                <Button fx:id="loginSend" text="Login" onAction="#handleMemberLogin"/>
            </VBox>
            <padding>
                <Insets top="5.0" bottom="5.0"/>
            </padding>
            <Button text="Member Registration" fx:id="questNav" onAction="#handleOpenUserRegistration"/>

        </VBox>


        <padding>
            <Insets left="50" right="50"/>
        </padding>
    </HBox>
    <padding>
        <Insets right="150"/>
    </padding>

    <Label fx:id="welcomeText"/>

    <Button fx:id="btnLogout" text="Log Out" onAction="#handleOpenHome"/>



</VBox>

