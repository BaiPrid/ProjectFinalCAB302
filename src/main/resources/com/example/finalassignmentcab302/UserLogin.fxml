<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>



<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.finalassignmentcab302.Controllers.UserLoginController"
            fitToWidth="true" fitToHeight="true">

    <VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml">

        <HBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER_RIGHT" spacing="50.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>

            <!-- Placeholder for future image -->
            <VBox alignment="CENTER_LEFT" spacing="50" prefWidth="400" >
                <Text text="A click closer to a bigger future. A bigger impact." fx:id="txtQuote" wrappingWidth="450.0"/>
                <Button fx:id="btnBack" text="Home" onAction="#handleOpenHome"/>
            </VBox>

            <VBox alignment="CENTER" spacing="10.0">


                <!-- Members Login Box -->
                <VBox alignment="CENTER" spacing="10.0">
                    <Text text="Members Login" fx:id="txtTitle"/>
                    <Label text="Username"/>
                    <TextField fx:id="memberUsername"/>
                    <Label text="Password"/>
                    <PasswordField fx:id="memberPassword"/>
                    <Button fx:id="loginSend" text="Login" onAction="#handleMemberLogin"/>
                </VBox>
                <padding>
                    <Insets top="5.0" bottom="5.0"/>
                </padding>
                <Button text="Member Registration" fx:id="questNav" onAction="#handleOpenUserRegistration"/>

            </VBox>


            <padding>
                <Insets left="50" right="50"/>
            </padding>

            <padding>
                <Insets right="150"/>
            </padding>
        </HBox>

        <Label fx:id="welcomeText"/>





    </VBox>

</ScrollPane>