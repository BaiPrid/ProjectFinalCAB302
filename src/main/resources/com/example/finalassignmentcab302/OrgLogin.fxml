<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>



<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<ScrollPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.finalassignmentcab302.Controllers.OrgloginController"
            fitToWidth="true" fitToHeight="true">

    <VBox alignment="CENTER" spacing="20.0">

        <HBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER_LEFT" spacing="50.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <!-- Organization Login Box moved to the far left side -->
            <VBox alignment="CENTER" spacing="10.0">
                <Text text="Organization Login" fx:id="txtTitle"/>
                <Label text="Username"/>
                <TextField fx:id="orgUsername"/>
                <Label text="Password"/>
                <PasswordField fx:id="orgPassword"/>
                <Button text="Login" onAction="#handleOrgLogin"/>
                <padding>
                    <Insets top="5.0" bottom="5.0"/>
                </padding>
                <Button text="Organization Registration" fx:id="questNav" onAction="#handleOpenOrganisationRegistration"/>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="90.0" top="20.0"/>
                </padding>
            </VBox>

            <!-- Placeholder for future image -->
            <VBox alignment="CENTER">
                <Text text="Your cause for a bigger impact." fx:id="txtQuote" wrappingWidth="400.0"/>
            </VBox>

            <padding>
                <Insets left="50" right="50"/>
            </padding>
            <padding>
                <Insets left="150"/>
            </padding>
        </HBox>

        <Label fx:id="welcomeText"/>

        <Button fx:id="btnLogout" text="Home" onAction="#handleOpenHome"/>



    </VBox>
</ScrollPane>