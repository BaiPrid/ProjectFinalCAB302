<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>



<?import javafx.scene.control.Button?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.finalassignmentcab302.Controllers.HelloController">
    <padding>
        <Insets bottom="20.0" left="20" right="20"/>
    </padding>
    <!--TASKBAR -->
    <HBox spacing="50.0" alignment="CENTER">

        <Button text="Member Registration" fx:id="registerButton" onAction="#handleOpenUserRegistration"/>
        <Button text="Questionnaire" fx:id="questNav" onAction="#handleSwitchToQuestionPage"/>
        <Button text="Organisation Registration" fx:id="navigateButton" onAction="#handleOpenOrganisationRegistration"/>
        <Button text="Home" fx:id="HomeP" onAction="#handleOpenHomePage"/>

    </HBox>

    <HBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="50.0">

        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

         <!--Members Login Box-->
        <VBox alignment="CENTER" spacing="10.0">
            <Label text="Members Login"/>
            <Label text="Username"/>
            <TextField fx:id="memberUsername"/>
            <Label text="Password"/>
            <PasswordField fx:id="memberPassword"/>
            <Button text="Login" onAction="#handleMemberLogin"/>
        </VBox>
        <padding>
            <Insets left="50" right="50"/>
        </padding>

        <!--Organization Login Box-->
       <VBox alignment="CENTER" spacing="10.0">
            <Label text="Organization Login"/>
            <Label text="Username"/>
            <TextField fx:id="orgUsername"/>
            <Label text="Password"/>
            <PasswordField fx:id="orgPassword"/>
            <Button text="Login" onAction="#handleOrgLogin"/>
        </VBox>
    </HBox>

    <Label fx:id="welcomeText"/>

    <Button fx:id="btnLogout" text="Log Out" onAction="#handleOpenHome"/>



</VBox>

